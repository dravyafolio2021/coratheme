<header
  id="cora-header-{{ section.id }}"
  class="cora-header {% if section.settings.is_sticky %}cora-header--sticky{% endif %}"
  role="banner"
>
  <div class="cora-header__inner container">
    <!-- Left: Logo -->
    <div class="cora-header__logo">
      {% if section.settings.logo_text != blank %}
        <a href="/" class="cora-header__brand" style="color: {{ section.settings.logo_color }};">
          {{ section.settings.logo_text }}
        </a>
      {% elsif section.settings.logo_image != blank %}
        <a href="/" class="cora-header__brand">
          <img
            src="{{ section.settings.logo_image | img_url: '200x' }}"
            alt="{{ section.settings.logo_alt | default: 'Site logo' }}"
            class="cora-header__logo-img"
            width="120"
            height="auto"
            loading="lazy"
          >
        </a>
      {% else %}
        <a href="/" class="cora-header__brand">Your Brand</a>
      {% endif %}
    </div>

    <!-- Center: Navigation Menu -->
    <nav class="cora-header__nav" role="navigation" aria-label="Main Menu">
      <ul class="cora-header__menu">
        {% for link in linklists[section.settings.main_menu].links %}
          <li class="cora-header__menu-item">
            <a href="{{ link.url }}" class="cora-header__menu-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Right: Icons -->
    <div class="cora-header__icons">
      <a href="/account" class="cora-header__icon" aria-label="Account">
        {% render 'icon-account' %}
      </a>
      <a href="/cart" class="cora-header__icon" aria-label="Cart">
        {% render 'icon-cart' %}
      </a>
      <!-- Mobile Menu Toggle -->
      <button class="cora-header__menu-toggle" aria-label="Open Menu">
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>
</header>

{{ 'cora-header.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Cora Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Zenmies"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo Alt Text",
      "default": "Zenmies Logo"
    },
    {
      "type": "color",
      "id": "logo_color",
      "label": "Logo Text Color",
      "default": "#6841D9"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu"
    },
    {
      "type": "checkbox",
      "id": "is_sticky",
      "label": "Enable Sticky Header",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Cora Header",
      "category": "Cora Custom Sections"
    }
  ]
}
{% endschema %}
