{% doc %}
  @prompt
    Help me make a container widget,  just like the elementor Container widget on wordpress
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-container-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    margin-left: auto;
    margin-right: auto;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.background_image %}
      background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');
      background-size: {{ block.settings.background_size }};
      background-position: {{ block.settings.background_position }};
      background-repeat: {{ block.settings.background_repeat }};
    {% endif %}
    {% if block.settings.enable_border %}
      border: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
    {% endif %}
    {% if block.settings.enable_shadow %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    {% endif %}
    position: relative;
    overflow: {{ block.settings.overflow }};
  }

  .ai-container-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.flex_direction }};
    justify-content: {{ block.settings.justify_content }};
    align-items: {{ block.settings.align_items }};
    gap: {{ block.settings.gap }}px;
    flex-wrap: {{ block.settings.flex_wrap }};
    min-height: {{ block.settings.min_height }}px;
  }

  {% if block.settings.enable_overlay %}
    .ai-container-overlay-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ block.settings.overlay_color }};
      opacity: {{ block.settings.overlay_opacity }};
      pointer-events: none;
      border-radius: {{ block.settings.border_radius }}px;
    }
  {% endif %}

  .ai-container-inner-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .ai-container-wrapper-{{ ai_gen_id }} {
      width: 100%;
      padding-top: {{ block.settings.mobile_padding_top }}px;
      padding-bottom: {{ block.settings.mobile_padding_bottom }}px;
      padding-left: {{ block.settings.mobile_padding_left }}px;
      padding-right: {{ block.settings.mobile_padding_right }}px;
      margin-top: {{ block.settings.mobile_margin_top }}px;
      margin-bottom: {{ block.settings.mobile_margin_bottom }}px;
    }

    .ai-container-content-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_flex_direction }};
      gap: {{ block.settings.mobile_gap }}px;
      min-height: {{ block.settings.mobile_min_height }}px;
    }
  }
{% endstyle %}

<container-block-{{ ai_gen_id }} class="ai-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-container-wrapper-{{ ai_gen_id }}">
    {% if block.settings.enable_overlay %}
      <div class="ai-container-overlay-{{ ai_gen_id }}"></div>
    {% endif %}
    <div class="ai-container-inner-{{ ai_gen_id }}">
      <div class="ai-container-content-{{ ai_gen_id }}">
        {% if block.settings.html_content != blank %}
          {{ block.settings.html_content }}
        {% else %}
          <div style="padding: 40px; text-align: center; color: #999; width: 100%;">
            <p style="margin: 0; font-size: 14px;">Add content using the HTML content setting below, or nest other blocks inside this container</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</container-block-{{ ai_gen_id }}>

<script>
  (function() {
    class ContainerBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.init();
      }

      init() {
        const wrapper = this.querySelector('.ai-container-wrapper-{{ ai_gen_id }}');
        if (wrapper) {
          wrapper.style.transition = 'all 0.3s ease';
        }
      }
    }

    customElements.define('container-block-{{ ai_gen_id }}', ContainerBlock{{ ai_gen_id }});
  })();
</script>

