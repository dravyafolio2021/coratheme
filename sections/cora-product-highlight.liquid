{% schema %}
{
  "name": "Cora Product Highlight",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "WHAT IS RED LIGHT THERAPY?"
    },
    {
      "type": "text",
      "id": "title_strong",
      "label": "Main Title - First Part",
      "default": "What is the"
    },
    {
      "type": "text",
      "id": "title_gradient",
      "label": "Main Title - Gradient Part",
      "default": "MOVE+"
    },
    {
      "type": "text",
      "id": "title_regular",
      "label": "Main Title - Last Part",
      "default": "Pro?"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Subtitle / Description",
      "default": "The MOVE+ is a clinically backed red light therapy device that uses LED and laser technology to relieve joint pain, reduce inflammation, and improve mobility."
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "BUY NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Cora Product Highlight"
    }
  ]
}
{% endschema %}

<section class="cora-product-highlight">
  <div class="container cora-product-highlight__container">
    <div class="cora-product-highlight__main">
      <div class="cora-product-highlight__intro">
        {% if section.settings.eyebrow != blank %}
          <div class="cora-product-highlight__eyebrow text-uppercase text-gradient">
            {{ section.settings.eyebrow }}
          </div>
        {% endif %}
        <div class="cora-product-highlight__title-desc">
          <h2 class="cora-product-highlight__heading">
            <span>{{ section.settings.title_strong }} </span>
            <span class="text-gradient">{{ section.settings.title_gradient }}</span>
            <span> {{ section.settings.title_regular }}</span>
          </h2>
          {% if section.settings.description != blank %}
            <div class="cora-product-highlight__desc">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="cora-product-highlight__cta">
        {% if section.settings.button_text != blank %}
          <a class="btn btn--primary" href="{{ section.settings.button_link | default: '#' }}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.product_image != blank %}
      <div class="cora-product-highlight__image">
        <img
          src="{{ section.settings.product_image | img_url: '1024x' }}"
          alt="{{ section.settings.title_gradient | escape }}"
          class="cora-product-highlight__img"
          loading="lazy"
          width="100%"
          height="100%"
        >
      </div>
    {% endif %}
  </div>
</section>
