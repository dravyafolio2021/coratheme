<footer id="cora-footer" class="cora-footer" role="contentinfo">
  
  <!-- BOTTOM BAR -->
  <div class="cora-footer__bottom container">
    <div class="cora-footer__payments">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      {% endif %}
    </div>

    <div class="cora-footer__legal">
      <p>© {{ 'now' | date: '%Y' }} — {{ shop.name }}. All Rights Reserved.</p>
      <div class="cora-footer__policies">
        <a href="/policies/privacy-policy">Privacy Policy</a>
        <a href="/policies/refund-policy">Refund Policy</a>
        <a href="/policies/terms-of-service">User Terms</a>
      </div>
    </div>
  </div>
</footer>

{{ 'cora-footer.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Footer Column",
      "settings": [
        { "type": "text", "id": "heading", "label": "Column Heading" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cora Footer",
      "category": "Cora Custom Sections"
    }
  ]
}
{% endschema %}
