{% schema %}
{
  "name": "Cora Sticky Header",
  "tag": "header",
  "settings": [
    {
      "type": "html",
      "id": "logo_svg",
      "label": "SVG Logo Icon",
      "default": "<svg viewBox='0 0 120 32' fill='none' xmlns='http://www.w3.org/2000/svg'><text x='0' y='25' font-family='Inter,Arial,sans-serif' font-size='28' font-weight='700' letter-spacing='9' fill='black'>KINEON</text></svg>"
    },
    {
      "type": "text",
      "id": "currency_text",
      "label": "Currency",
      "default": "USD $"
    },
    {
      "type": "url",
      "id": "account_link",
      "label": "Account Link",
      "default": "/account"
    },
    {
      "type": "url",
      "id": "cart_link",
      "label": "Cart Link",
      "default": "/cart"
    },
    {
      "type": "html",
      "id": "account_icon",
      "label": "Account SVG Icon",
      "default": "<svg width='22' height='22' fill='none' stroke='currentColor'><circle cx='11' cy='7' r='4'/><path d='M11 13c-3 0-7 2-7 4v2h14v-2c0-2-4-4-7-4z'/></svg>"
    },
    {
      "type": "html",
      "id": "cart_icon",
      "label": "Cart SVG Icon",
      "default": "<svg width='22' height='22' fill='none' stroke='currentColor'><circle cx='7' cy='19' r='1'/><circle cx='18' cy='19' r='1'/><path d='M1 1h3l2.3 10.6a2 2 0 0 0 2 1.4h7.2a2 2 0 0 0 2-1.4L21 6H5'/></svg>"
    }
  ],
  "presets": [
    {
      "name": "Cora Sticky Header"
    }
  ]
}
{% endschema %}

<header class="cora-header cora-header--sticky">
  <div class="cora-header__container">
    <div class="cora-header__left">
      <a href="/" class="cora-header__logo-link" aria-label="Home">
        <span class="cora-header__logo-svg">{% raw %}{{ section.settings.logo_svg }}{% endraw %}</span>
      </a>
    </div>
    <div class="cora-header__right">
      <span class="cora-header__currency text-gradient">{{ section.settings.currency_text }}</span>
      <a href="{{ section.settings.account_link | default: '/account' }}" class="cora-header__icon" aria-label="Account">{% raw %}{{ section.settings.account_icon }}{% endraw %}</a>
      <a href="{{ section.settings.cart_link | default: '/cart' }}" class="cora-header__icon" aria-label="Cart">{% raw %}{{ section.settings.cart_icon }}{% endraw %}</a>
    </div>
  </div>
</header>


{{ 'cora-header.css' | asset_url | stylesheet_tag }}