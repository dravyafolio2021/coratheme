<footer id="cora-footer-{{ section.id }}" class="cora-footer">
  <div class="cora-footer__inner container">
    <div class="cora-footer__grid">
      <!-- Brand + Newsletter -->
      <div class="cora-footer__col cora-footer__brand">
        {% if section.settings.brand_name != blank %}
          <h2 class="cora-footer__logo" style="color: {{ section.settings.text_color }};">
            {{ section.settings.brand_name }}
          </h2>
        {% endif %}

        <!-- Newsletter -->
        <form
          method="post"
          action="{{ section.settings.form_action | default: '#' }}"
          class="cora-footer__form"
        >
          <input
            type="email"
            name="email"
            placeholder="{{ section.settings.email_placeholder | default: 'Email' }}"
            class="cora-footer__input"
            required
          >
          <button type="submit" class="cora-footer__submit" aria-label="Subscribe">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m0 0l-6-6m6 6l-6 6"/>
            </svg>
          </button>
        </form>

        <!-- Social Icons -->
        <div class="cora-footer__socials">
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="{{ section.settings.text_color }}" viewBox="0 0 24 24">
                <path d="M12 2.2c3.2 0 3.6 0 4.9.1 1.2.1 1.9.3 2.4.5.6.2 1.1.5 1.6.9.5.4.8.9 1 .9.2.2.5.7.7 1.2.2.5.4 1.2.5 2.4.1 1.3.1 1.7.1 4.9s0 3.6-.1 4.9c-.1 1.2-.3 1.9-.5 2.4-.2.6-.5 1.1-.9 1.6-.4.5-.9.8-.9 1-.2.2-.7.5-1.2.7-.5.2-1.2.4-2.4.5-1.3.1-1.7.1-4.9.1s-3.6 0-4.9-.1c-1.2-.1-1.9-.3-2.4-.5-.6-.2-1.1-.5-1.6-.9-.5-.4-.8-.9-1-.9-.2-.2-.5-.7-.7-1.2-.2-.5-.4-1.2-.5-2.4-.1-1.3-.1-1.7-.1-4.9s0-3.6.1-4.9c.1-1.2.3-1.9.5-2.4.2-.6.5-1.1.9-1.6.4-.5.9-.8.9-1 .2-.2.7-.5 1.2-.7.5-.2 1.2-.4 2.4-.5 1.3-.1 1.7-.1 4.9-.1z"/>
                <circle cx="12" cy="12" r="3.2"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" aria-label="X (Twitter)">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="{{ section.settings.text_color }}" viewBox="0 0 24 24">
                <path d="M18.24 2.25h3.36l-7.34 8.38 8.63 11.12h-6.76l-5.3-6.95-6.06 6.95H1.42l7.83-8.97L.89 2.25h6.9l4.78 6.32 5.67-6.32z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Info Links -->
      <div class="cora-footer__col">
        <h3 class="cora-footer__title">INFO</h3>
        <ul>
          {% for link in linklists[section.settings.info_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Legal Links -->
      <div class="cora-footer__col">
        <h3 class="cora-footer__title">LEGAL</h3>
        <ul>
          {% for link in linklists[section.settings.legal_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Disclaimer -->
      <div class="cora-footer__col">
        <h3 class="cora-footer__title">DISCLAIMER</h3>
        <p>{{ section.settings.disclaimer_text }}</p>
      </div>
    </div>

    <div class="cora-footer__bottom">
      <p>{{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer>

{{ 'cora-footer-zenmies.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Cora Footer",
  "class": "cora-section cora-footer",
  "settings": [
    { "type": "text", "id": "brand_name", "label": "Brand Name", "default": "Zenmies" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#FFFFFF" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#110E16" },
    { "type": "link_list", "id": "info_menu", "label": "Info Menu" },
    { "type": "link_list", "id": "legal_menu", "label": "Legal Menu" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "twitter_url", "label": "X (Twitter) URL" },
    { "type": "text", "id": "form_action", "label": "Newsletter Form Action", "default": "#" },
    { "type": "text", "id": "email_placeholder", "label": "Email Placeholder", "default": "Email" },
    { "type": "textarea", "id": "disclaimer_text", "label": "Disclaimer Text", "default": "These statements have not been evaluated by the FDA or MHRA. These products are not intended to diagnose, treat, cure or prevent any disease." },
    { "type": "text", "id": "copyright_text", "label": "Copyright / Bottom Text", "default": "All Rights Reserved. These Statements Have Not Been Evaluated By The Food And Drug Administration." }
  ],
  "presets": [{ "name": "Cora Footer", "category": "Zenmies" }]
}
{% endschema %}
