<section id="cora-ingredients-{{ section.id }}" class="cora-ingredients">
  <div class="cora-ingredients__inner">
    {% if section.settings.heading != blank %}
      <h2
        class="cora-ingredients__heading"
        style="
          color: {{ section.settings.heading_color }};
          font-size: {{ section.settings.heading_size }}px;
          font-weight: {{ section.settings.heading_weight }};
          text-align: {{ section.settings.heading_align }};
        "
      >
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <!-- Ingredients Grid -->
    <div class="cora-ingredients__grid">
      {% for block in section.blocks %}
        {% if block.type == 'ingredient' %}
          <div class="cora-ingredient-card">
            <div
              class="cora-ingredient-card__image"
              style="                background-image: url('{{ block.settings.image | image_url: width: 600 }}');"
            >
              <div
                class="cora-ingredient-card__overlay"
                style="background: {{ section.settings.overlay_color }};"
              >
                <h3
                  class="cora-ingredient-card__title"
                  style="
                    color: {{ section.settings.title_color }};
                    font-size: {{ section.settings.title_size }}px;
                    font-weight: {{ section.settings.title_weight }};
                  "
                >
                  {{ block.settings.title }}
                </h3>
                <p
                  class="cora-ingredient-card__desc"
                  style="
                    color: {{ section.settings.desc_color }};
                    font-size: {{ section.settings.desc_size }}px;
                    font-weight: {{ section.settings.desc_weight }};
                  "
                >
                  {{ block.settings.description }}
                </p>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Trust Badges -->
    {% if section.blocks.size > 0 %}
      <div class="cora-trust__grid">
        {% for block in section.blocks %}
          {% if block.type == 'trust_badge' %}
            <div class="cora-trust__item">
              <div class="cora-trust__icon">{{ block.settings.icon_svg }}</div>
              <p class="cora-trust__label">{{ block.settings.label }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <!-- CTA -->
    {% if section.settings.cta_text != blank %}
      <a
        href="{{ section.settings.cta_link }}"
        class="cora-ingredients__cta"
        style="
          background: {{ section.settings.cta_bg }};
          color: {{ section.settings.cta_color }};
          border-radius: {{ section.settings.cta_radius }}px;
        "
      >
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</section>

{{ 'cora-ingredients.css' | asset_url | stylesheet_tag }}

